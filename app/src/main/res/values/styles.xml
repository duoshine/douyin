<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    修改TabLayout的文本代销-->
    <style name="TabLayout">
        <item name="android:textSize">16sp</item>
    </style>

    <!--    修改SeekBar显示为全屏 默认取消圆点显示-->
    <style name="SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_default</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <!--   backgroundDimAmount   -->
    <style name="commentList" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!--        dialog 不会上移-->
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <!--        dialog弹出时 背景颜色不变-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="commentReply" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.2</item>
<!--        可见时使软键盘可见 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustNothing</item>
    </style>

<!--    首页 查看通讯录-->
    <style name="AddressBook" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/address_book_default</item>
    </style>
</resources>
