<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/theme_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <com.duoshine.douyin.meishe.sdkdemo.view.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/item_net_down"
            android:layout_width="28.5dp"
            android:layout_height="18.5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_cloud_download"/>
    </com.duoshine.douyin.meishe.sdkdemo.view.SquareRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10.5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="穿梭"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_clip_num"
            android:layout_width="26dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_clip_num"
            android:drawablePadding="3dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_theme_duration"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_theme_duration"
            android:drawablePadding="3dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </LinearLayout>
</LinearLayout>
