    <com.duoshine.douyin.meishe.sdkdemo.edit.view.RoundColorView
        android:id="@+id/captionColor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true" />
</RelativeLayout>
