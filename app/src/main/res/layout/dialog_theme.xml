<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="258dp"
    android:layout_height="122dp"
    android:background="@drawable/shape_theme_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="258dp"
        android:layout_height="122dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/v_dialog_break"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_dialog_break"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="43.5dp"
        android:background="#FFC8C8C8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/v_dialog_break_split"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        android:background="#FFC8C8C8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_dialog_break" />

    <Button
        android:id="@+id/bt_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_theme_dialog_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#FF0056EB"
        android:textSize="@dimen/sp15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_dialog_break_split"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_dialog_break" />

    <Button
        android:id="@+id/bt_dialog_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_theme_dialog_bg"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#FF0056EB"
        android:textSize="@dimen/sp15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_dialog_break_split"
        app:layout_constraintTop_toBottomOf="@+id/v_dialog_break" />
</androidx.constraintlayout.widget.ConstraintLayout>